<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ImagoApp.Views.WeaveTalentPage" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   xmlns:customControls="clr-namespace:ImagoApp.Views.CustomControls;assembly=ImagoApp" xmlns:models="clr-namespace:ImagoApp.Application.Models;assembly=ImagoApp.Application" xmlns:viewModels="clr-namespace:ImagoApp.ViewModels;assembly=ImagoApp"
   x:DataType="viewModels:WeaveTalentPageViewModel">
    <ContentPage.Content>
        <Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Frame Grid.Column="0">
                    <Grid Style="{StaticResource SingleGradiantStyle}">
                        <CollectionView x:Name="WeaveTalentCollectionView" IsGrouped="true"
                           ItemsSource="{Binding WeaveTalents}"
                           SelectionChanged="SelectableItemsView_OnSelectionChanged" SelectionMode="Single">
                            <CollectionView.GroupHeaderTemplate>
                                <DataTemplate x:DataType="viewModels:WeaveTalentList">
                                    <Grid Padding="20">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Path Margin="0,0,10,0" Aspect="Uniform" Stroke="Black"
                                           StrokeThickness="0.5" VerticalOptions="Center">
                                            <Path.Triggers>
                                                <DataTrigger Binding="{Binding WeaveSourceGroup}"
                                                   TargetType="Path" Value="Bewusstsein">
                                                    <Setter Property="Style" Value="{StaticResource BewusstseinIcon}" />
                                                    <Setter Property="WidthRequest" Value="75" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding WeaveSourceGroup}"
                                                   TargetType="Path" Value="Kontrolle">
                                                    <Setter Property="Style" Value="{StaticResource KontrolleIcon}" />
                                                    <Setter Property="WidthRequest" Value="75" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding WeaveSourceGroup}"
                                                   TargetType="Path" Value="Struktur">
                                                    <Setter Property="Style" Value="{StaticResource StrukturIcon}" />
                                                    <Setter Property="WidthRequest" Value="75" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding WeaveSourceGroup}"
                                                   TargetType="Path" Value="Materie">
                                                    <Setter Property="Style" Value="{StaticResource MaterieIcon}" />
                                                    <Setter Property="WidthRequest" Value="75" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding WeaveSourceGroup}"
                                                   TargetType="Path" Value="Einfalt">
                                                    <Setter Property="Style" Value="{StaticResource EinfaltIcon}" />
                                                    <Setter Property="WidthRequest" Value="75" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding WeaveSourceGroup}"
                                                   TargetType="Path" Value="Ekstase">
                                                    <Setter Property="Style" Value="{StaticResource EkstaseIcon}" />
                                                    <Setter Property="WidthRequest" Value="75" />
                                                    <Setter Property="HeightRequest" Value="75" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding WeaveSourceGroup}"
                                                   TargetType="Path" Value="Chaos">
                                                    <Setter Property="Style" Value="{StaticResource ChaosIcon}" />
                                                    <Setter Property="WidthRequest" Value="75" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding WeaveSourceGroup}"
                                                   TargetType="Path" Value="Leere">
                                                    <Setter Property="Style" Value="{StaticResource LeereIcon}" />
                                                    <Setter Property="WidthRequest" Value="75" />
                                                </DataTrigger>
                                            </Path.Triggers>
                                        </Path>

                                        <Label Grid.Column="1" FontAttributes="Bold"
                                           FontSize="{DynamicResource FontSizeSmallCaption}"
                                           Text="{Binding WeaveSourceGroup}"
                                           VerticalOptions="Center" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.GroupHeaderTemplate>

                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:WeaveTalentModel">
                                    <Grid Padding="50,5,5,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40*" />
                                            <ColumnDefinition Width="60*" />
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0"
                                           FontSize="{DynamicResource FontSizeBigContent}"
                                           Text="{Binding Name}" />
                                        <Label Grid.Column="1"
                                           FontSize="{DynamicResource FontSizeBigContent}"
                                           Text="{Binding ShortDescription}"
                                           TextColor="{StaticResource AntiUmbra1}" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </Frame>
            </Grid>

            <!--  dialog  -->
            <Grid IsVisible="{Binding WeaveTalentDetailViewModel, Converter={StaticResource ObjectNotNullToBoolConverter}}">
                <ContentView BackgroundColor="black" Opacity="0.6">
                    <ContentView.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding WeaveTalentDetailViewModel.CloseCommand}" />
                    </ContentView.GestureRecognizers>
                </ContentView>
                <Frame HeightRequest="800" HorizontalOptions="Center" VerticalOptions="Center"
                   WidthRequest="1600">
                    <customControls:WeaveTalentDetailView HorizontalOptions="Fill" VerticalOptions="Fill"
                       WeaveTalentDetailViewModel="{Binding WeaveTalentDetailViewModel, Source={RelativeSource AncestorType={x:Type viewModels:WeaveTalentPageViewModel}}}" />
                </Frame>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>