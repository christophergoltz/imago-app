<?xml version="1.0" encoding="UTF-8"?>
<Path xmlns="http://xamarin.com/schemas/2014/forms"  StrokeThickness="0.5" HeightRequest="50" WidthRequest="50"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  Aspect="Uniform" Stroke="Black" 
      x:Class="ImagoApp.Views.CustomControls.WeavePrincipleIcon"  
   
      x:Name="WeavePrincipleIconControl">
   
    <Path.Triggers>
        <DataTrigger Binding="{Binding Name, Source={x:Reference WeavePrincipleIconControl}}" 
                     TargetType="Path" Value="Bewusstsein">
            <Setter Property="Style" Value="{DynamicResource BewusstseinIcon}" />
            <Setter Property="IsVisible" Value="True"/>
        </DataTrigger>
