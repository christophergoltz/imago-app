<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" Title="Vor- und Nachteile"
             x:Class="ImagoApp.Views.PerksPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Vor- und Nachteile" FontSize="{DynamicResource FontSizeTitle}" FontAttributes="Bold"
                   HorizontalOptions="CenterAndExpand" />
            <Label Text="Hier gibt es nocht nichts zu sehen" FontSize="{DynamicResource FontSizeHeader}"
                   HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>